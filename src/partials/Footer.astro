---
import { siteConfig } from '@/data/site-config';
import Container from '@/components/ui/Container.astro';
import GradientText from '@/components/ui/GradientText.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-surface-100 border-t border-white/5">
  <Container size="xl">
    <!-- Main footer content -->
    <div class="py-16 md:py-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-8">
        <!-- Brand column -->
        <div class="lg:col-span-1">
          <a href="/" class="inline-block mb-4">
            <span class="text-2xl font-bold">
              <GradientText>AVID</GradientText>
              <span class="text-text"> TECH USA</span>
            </span>
          </a>
          <p class="text-text-muted text-sm leading-relaxed mb-6 max-w-xs">
            Professional web design and development for small businesses in Georgia.
            We build fast, modern websites that help you grow.
          </p>
          <!-- Social links -->
          <div class="flex items-center gap-4">
            {siteConfig.social.github && (
              <a
                href={siteConfig.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-subtle hover:text-accent-primary transition-colors"
                aria-label="GitHub"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
            )}
            {siteConfig.social.linkedin && (
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-subtle hover:text-accent-primary transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )}
          </div>
        </div>

        <!-- Services column -->
        <div>
          <h3 class="text-text font-semibold mb-4">Services</h3>
          <ul class="space-y-3">
            {siteConfig.navigation.footer.services.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-text-muted text-sm hover:text-accent-primary transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company column -->
        <div>
          <h3 class="text-text font-semibold mb-4">Company</h3>
          <ul class="space-y-3">
            {siteConfig.navigation.footer.company.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-text-muted text-sm hover:text-accent-primary transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Locations column -->
        <div>
          <h3 class="text-text font-semibold mb-4">Locations</h3>
          <ul class="space-y-3">
            {siteConfig.navigation.footer.locations.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-text-muted text-sm hover:text-accent-primary transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact column -->
        <div>
          <h3 class="text-text font-semibold mb-4">Contact</h3>
          <ul class="space-y-3">
            <li>
              <a
                href={`mailto:${siteConfig.email}`}
                class="text-text-muted text-sm hover:text-accent-primary transition-colors"
              >
                {siteConfig.email}
              </a>
            </li>
            <li>
              <a
                href={`tel:${siteConfig.phone.replace(/[^0-9+]/g, '')}`}
                class="text-text-muted text-sm hover:text-accent-primary transition-colors"
              >
                {siteConfig.phone}
              </a>
            </li>
            <li class="text-text-muted text-sm">
              {siteConfig.location.city}, {siteConfig.location.stateAbbr}
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="py-6 border-t border-white/5">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-text-subtle text-sm">
          &copy; {currentYear} {siteConfig.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          {siteConfig.navigation.footer.legal.map((item) => (
            <a
              href={item.href}
              class="text-text-subtle text-sm hover:text-text-muted transition-colors"
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </Container>
</footer>
