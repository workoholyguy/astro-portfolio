---
interface Props {
  class?: string;
  variant?: 'default' | 'outline' | 'gradient';
  size?: 'sm' | 'md';
}

const { class: className = '', variant = 'default', size = 'md' } = Astro.props;

const variantClasses = {
  default: 'bg-white/10 text-text-muted',
  outline: 'border border-white/20 text-text-muted',
  gradient: 'bg-gradient-primary text-surface font-medium',
};

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-sm',
};
---

<span
  class:list={[
    'inline-flex items-center rounded-full',
    variantClasses[variant],
    sizeClasses[size],
    className,
  ]}
>
  <slot />
</span>
