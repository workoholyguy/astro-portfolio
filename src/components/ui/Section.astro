---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  id?: string;
  background?: 'default' | 'elevated' | 'mesh' | 'none';
}

const {
  class: className = '',
  padding = 'lg',
  id,
  background = 'default',
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'py-12',
  md: 'py-16 md:py-20',
  lg: 'py-20 md:py-28',
  xl: 'py-28 md:py-36',
};

const backgroundClasses = {
  default: 'bg-surface',
  elevated: 'bg-surface-100',
  mesh: 'bg-surface bg-gradient-mesh',
  none: '',
};
---

<section
  id={id}
  class:list={[paddingClasses[padding], backgroundClasses[background], className]}
>
  <slot />
</section>
