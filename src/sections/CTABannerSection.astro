---
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Button from '@/components/ui/Button.astro';
import GradientText from '@/components/ui/GradientText.astro';
import RevealOnScroll from '@/components/motion/RevealOnScroll.astro';
---

<Section padding="lg" background="default">
  <Container size="lg">
    <RevealOnScroll>
      <div class="relative overflow-hidden rounded-3xl">
        {/* Background gradient */}
        <div class="absolute inset-0 bg-gradient-primary opacity-10"></div>
        <div class="absolute inset-0 bg-gradient-mesh"></div>

        {/* Glow effects */}
        <div class="absolute -top-24 -right-24 w-64 h-64 bg-accent-primary/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-64 h-64 bg-accent-orange/20 rounded-full blur-3xl"></div>

        {/* Content */}
        <div class="relative glass-card-static rounded-3xl px-8 py-16 md:py-20 text-center">
          <h2 class="text-display-md md:text-display-lg text-text mb-4 max-w-2xl mx-auto">
            Ready to build a website that
            <GradientText>works for you?</GradientText>
          </h2>

          <p class="text-lg text-text-muted mb-8 max-w-xl mx-auto">
            Let's talk about your project. Get a free consultation and see how we can
            help your business grow online.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button href="/contact" variant="primary" size="lg">
              Get Your Free Quote
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </Button>
            <Button href="/work" variant="secondary" size="lg">
              See Our Work
            </Button>
          </div>

          {/* Trust badges */}
          <div class="mt-12 pt-8 border-t border-white/10">
            <div class="flex flex-wrap items-center justify-center gap-8 text-text-subtle text-sm">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Fast turnaround</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Satisfaction guaranteed</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Free consultation</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </RevealOnScroll>
  </Container>
</Section>
