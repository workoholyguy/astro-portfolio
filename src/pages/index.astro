---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeroSection from '@/sections/HeroSection.astro';
import WhatWeDoSection from '@/sections/WhatWeDoSection.astro';
import SelectedWorkSection from '@/sections/SelectedWorkSection.astro';
import ProcessSection from '@/sections/ProcessSection.astro';
import PricingSection from '@/sections/PricingSection.astro';
import TestimonialsSection from '@/sections/TestimonialsSection.astro';
import CTABannerSection from '@/sections/CTABannerSection.astro';
import { siteConfig } from '@/data/site-config';
import { generateLocalBusinessSchema } from '@/utils/seo';

const pageTitle = 'Web Design & Development for Small Businesses in Georgia';
const pageDescription = siteConfig.description;

// Add LocalBusiness schema for homepage
const localBusinessSchema = generateLocalBusinessSchema();
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  schema={localBusinessSchema}
>
  <HeroSection />
  <WhatWeDoSection />
  <SelectedWorkSection />
  <ProcessSection />
  <PricingSection />
  <TestimonialsSection />
  <CTABannerSection />
</BaseLayout>
