---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import GlassCard from '@/components/ui/GlassCard.astro';
import GradientText from '@/components/ui/GradientText.astro';
import RevealOnScroll from '@/components/motion/RevealOnScroll.astro';
import { siteConfig } from '@/data/site-config';
---

<BaseLayout
  title="Contact Us | Get a Free Quote"
  description="Ready to start your project? Contact us for a free consultation. We'll discuss your goals and create a plan to help your business grow online."
>
  <Section padding="lg" background="mesh">
    <Container size="xl">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Left Column - Info -->
        <div>
          <RevealOnScroll>
            <p class="text-accent-primary text-sm font-medium tracking-wide uppercase mb-4">
              Get in Touch
            </p>
          </RevealOnScroll>
          <RevealOnScroll delay={100}>
            <h1 class="text-display-lg md:text-display-xl text-text mb-6">
              Let's build something
              <GradientText>great together</GradientText>
            </h1>
          </RevealOnScroll>
          <RevealOnScroll delay={200}>
            <p class="text-xl text-text-muted leading-relaxed mb-8">
              Ready to get started? Fill out the form and we'll get back to you within
              one business day to discuss your project.
            </p>
          </RevealOnScroll>

          <!-- Contact Info -->
          <div class="space-y-6">
            <RevealOnScroll delay={300}>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-text font-semibold mb-1">Email</h3>
                  <a href={`mailto:${siteConfig.email}`} class="text-text-muted hover:text-accent-primary transition-colors">
                    {siteConfig.email}
                  </a>
                </div>
              </div>
            </RevealOnScroll>

            <RevealOnScroll delay={350}>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-text font-semibold mb-1">Phone</h3>
                  <a href={`tel:${siteConfig.phone.replace(/[^0-9+]/g, '')}`} class="text-text-muted hover:text-accent-primary transition-colors">
                    {siteConfig.phone}
                  </a>
                </div>
              </div>
            </RevealOnScroll>

            <RevealOnScroll delay={400}>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-primary/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-text font-semibold mb-1">Location</h3>
                  <p class="text-text-muted">
                    {siteConfig.location.city}, {siteConfig.location.stateAbbr}<br />
                    <span class="text-sm">Serving clients across Georgia & nationwide</span>
                  </p>
                </div>
              </div>
            </RevealOnScroll>
          </div>

          <!-- What happens next -->
          <RevealOnScroll delay={450}>
            <div class="mt-12 p-6 glass rounded-xl">
              <h3 class="text-text font-semibold mb-4">What happens next?</h3>
              <ol class="space-y-3 text-text-muted text-sm">
                <li class="flex items-start gap-3">
                  <span class="w-6 h-6 rounded-full bg-accent-primary/20 text-accent-primary text-xs flex items-center justify-center flex-shrink-0">1</span>
                  <span>We'll review your inquiry and get back to you within 1 business day</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="w-6 h-6 rounded-full bg-accent-primary/20 text-accent-primary text-xs flex items-center justify-center flex-shrink-0">2</span>
                  <span>We'll schedule a discovery call to learn more about your project</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="w-6 h-6 rounded-full bg-accent-primary/20 text-accent-primary text-xs flex items-center justify-center flex-shrink-0">3</span>
                  <span>You'll receive a detailed proposal with timeline and pricing</span>
                </li>
              </ol>
            </div>
          </RevealOnScroll>
        </div>

        <!-- Right Column - Form -->
        <RevealOnScroll delay={200}>
          <GlassCard padding="lg" hover={false}>
            <form
              name="contact"
              method="POST"
              data-netlify="true"
              netlify-honeypot="bot-field"
              action="/contact/success/"
              class="space-y-6"
            >
              <input type="hidden" name="form-name" value="contact" />
              <p class="hidden">
                <label>Don't fill this out: <input name="bot-field" /></label>
              </p>

              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-text text-sm font-medium mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text placeholder-text-subtle focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                    placeholder="John Smith"
                  />
                </div>
                <div>
                  <label for="email" class="block text-text text-sm font-medium mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text placeholder-text-subtle focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                    placeholder="john@company.com"
                  />
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-text text-sm font-medium mb-2">
                    Phone Number
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text placeholder-text-subtle focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                    placeholder="(555) 123-4567"
                  />
                </div>
                <div>
                  <label for="business" class="block text-text text-sm font-medium mb-2">
                    Business Name
                  </label>
                  <input
                    type="text"
                    id="business"
                    name="business"
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text placeholder-text-subtle focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                    placeholder="Your Company"
                  />
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="service" class="block text-text text-sm font-medium mb-2">
                    Service Interested In
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                  >
                    <option value="">Select a service</option>
                    {siteConfig.services.map((service) => (
                      <option value={service.slug}>{service.name}</option>
                    ))}
                  </select>
                </div>
                <div>
                  <label for="budget" class="block text-text text-sm font-medium mb-2">
                    Budget Range
                  </label>
                  <select
                    id="budget"
                    name="budget"
                    class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                  >
                    <option value="">Select budget</option>
                    {siteConfig.budgetRanges.map((range) => (
                      <option value={range.value}>{range.label}</option>
                    ))}
                  </select>
                </div>
              </div>

              <div>
                <label for="timeline" class="block text-text text-sm font-medium mb-2">
                  Timeline
                </label>
                <select
                  id="timeline"
                  name="timeline"
                  class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors"
                >
                  <option value="">When do you need this?</option>
                  {siteConfig.timelineOptions.map((option) => (
                    <option value={option.value}>{option.label}</option>
                  ))}
                </select>
              </div>

              <div>
                <label for="message" class="block text-text text-sm font-medium mb-2">
                  Tell us about your project *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows={5}
                  class="w-full px-4 py-3 bg-surface-200 border border-white/10 rounded-lg text-text placeholder-text-subtle focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors resize-none"
                  placeholder="What are you looking to build? Any specific features or goals you have in mind?"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full btn-primary py-4 text-lg"
              >
                Send Message
                <svg class="w-5 h-5 ml-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </button>

              <p class="text-text-subtle text-xs text-center">
                By submitting this form, you agree to our <a href="/privacy" class="text-accent-primary hover:underline">Privacy Policy</a>.
              </p>
            </form>
          </GlassCard>
        </RevealOnScroll>
      </div>
    </Container>
  </Section>
</BaseLayout>
