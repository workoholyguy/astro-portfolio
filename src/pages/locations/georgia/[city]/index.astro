---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Container from '../../../../components/ui/Container.astro';
import Section from '../../../../components/ui/Section.astro';
import GlassCard from '../../../../components/ui/GlassCard.astro';
import GradientText from '../../../../components/ui/GradientText.astro';
import Button from '../../../../components/ui/Button.astro';
import RevealOnScroll from '../../../../components/motion/RevealOnScroll.astro';
import Breadcrumbs from '../../../../components/seo/Breadcrumbs.astro';
import { getAllCities, getCityBySlug, getNearbyCities, getLocationBreadcrumbs } from '../../../../utils/locations';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const cities = getAllCities();
  return cities.map(city => ({
    params: { city: city.slug },
    props: { city },
  }));
}

const { city } = Astro.props;
const nearbyCities = getNearbyCities(city.slug);
const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const seo = {
  title: `Web Design & Development in ${city.name}, ${city.stateAbbr} | Professional Services`,
  description: `Professional web design, development, SEO, and digital marketing services for businesses in ${city.name}, Georgia. Get a custom website that grows your business.`,
};

const breadcrumbs = getLocationBreadcrumbs(city);

const serviceIcons: Record<string, string> = {
  'website-design': 'üé®',
  'website-redesign': 'üîÑ',
  'landing-pages': 'üìÑ',
  'maintenance-care': 'üõ°Ô∏è',
  'local-seo': 'üìç',
  'speed-technical-seo': '‚ö°',
  'shopify-customization': 'üõí',
  'brand-starter-kit': '‚ú®',
  'analytics-tracking': 'üìä',
};
---

<BaseLayout title={seo.title} description={seo.description}>
  <Section class="pt-32 pb-8">
    <Container>
      <Breadcrumbs items={breadcrumbs} />

      <RevealOnScroll>
        <div class="text-center max-w-3xl mx-auto mb-16">
          <p class="text-accent-primary text-sm font-medium tracking-wider uppercase mb-4">
            {city.stateAbbr} Web Services
          </p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Web Services in <GradientText>{city.name}</GradientText>
          </h1>
          <p class="text-text-muted text-lg">
            Professional web design, development, and digital marketing services for
            businesses in {city.name}, Georgia. We help local companies establish a strong
            online presence and attract more customers.
          </p>
        </div>
      </RevealOnScroll>
    </Container>
  </Section>

  <Section class="pb-16">
    <Container>
      <RevealOnScroll>
        <h2 class="text-2xl font-bold mb-8">Our Services in {city.name}</h2>
      </RevealOnScroll>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedServices.map((service, index) => (
          <RevealOnScroll delay={Math.min(index * 50, 300)}>
            <a
              href={`/locations/georgia/${city.slug}/${service.data.slug}`}
              class="glass-card p-6 h-full flex flex-col group"
            >
              <div class="flex items-start gap-4 mb-4">
                <span class="text-3xl">{serviceIcons[service.data.slug] || 'üåê'}</span>
                <div>
                  <h3 class="text-lg font-semibold group-hover:text-accent-primary transition-colors">
                    {service.data.name}
                  </h3>
                  <p class="text-text-subtle text-sm">in {city.name}</p>
                </div>
              </div>
              <p class="text-text-muted text-sm flex-1 mb-4">
                {service.data.shortDescription}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-accent-primary text-sm font-medium">
                  From ${service.data.pricingRange.from.toLocaleString()}
                </span>
                <svg
                  class="w-5 h-5 text-text-subtle group-hover:text-accent-primary group-hover:translate-x-1 transition-all"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          </RevealOnScroll>
        ))}
      </div>
    </Container>
  </Section>

  <Section class="pb-16">
    <Container>
      <RevealOnScroll>
        <GlassCard class="p-8">
          <div class="flex flex-col md:flex-row gap-8">
            <div class="flex-1">
              <h2 class="text-2xl font-bold mb-4">
                Why Choose Us for Your {city.name} Business?
              </h2>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-muted">Professional websites that convert visitors into customers</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-muted">Local SEO expertise to help {city.name} customers find you</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-muted">Fast, mobile-responsive designs that work on all devices</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-muted">Transparent pricing with no hidden fees</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-accent-primary mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-muted">Ongoing support and maintenance after launch</span>
                </li>
              </ul>
            </div>
            <div class="flex-shrink-0 flex flex-col justify-center">
              <Button href="/contact" variant="primary" size="lg">
                Get a Free Quote
              </Button>
              <p class="text-text-subtle text-sm text-center mt-3">
                No obligation ‚Ä¢ Quick response
              </p>
            </div>
          </div>
        </GlassCard>
      </RevealOnScroll>
    </Container>
  </Section>

  {nearbyCities.length > 0 && (
    <Section class="pb-16">
      <Container>
        <RevealOnScroll>
          <h2 class="text-2xl font-bold mb-6">Nearby Cities We Serve</h2>
        </RevealOnScroll>
        <div class="flex flex-wrap gap-3">
          {nearbyCities.map((nearbyCity, index) => (
            <RevealOnScroll delay={index * 50}>
              <a
                href={`/locations/georgia/${nearbyCity.slug}`}
                class="px-4 py-2 rounded-full glass hover:bg-white/10 transition-colors"
              >
                {nearbyCity.name}
              </a>
            </RevealOnScroll>
          ))}
        </div>
      </Container>
    </Section>
  )}

  <Section class="pb-32">
    <Container size="sm">
      <RevealOnScroll>
        <GlassCard class="p-8 md:p-12 text-center">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">
            Ready to Grow Your {city.name} Business?
          </h2>
          <p class="text-text-muted mb-8 max-w-xl mx-auto">
            Let's discuss how we can help your business succeed online. Get a free
            consultation and quote for your project.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/contact" variant="primary" size="lg">
              Start Your Project
            </Button>
            <Button href="/work" variant="secondary" size="lg">
              View Our Work
            </Button>
          </div>
        </GlassCard>
      </RevealOnScroll>
    </Container>
  </Section>
</BaseLayout>
